@model masterProject.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<style>
    body {
        background-image: url('../../Images/login.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }

    footer {
        display: none;
    }
</style>
<section>
    <div style="height:80px; background-image:url('../../Images/opacity2.png')">

    </div>
    <div class="container d-flex">
        <div class="col-md-7">
        </div>
        <div class="col-md-5" style="margin-top:70px;">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {<h4>Create a new account</h4>

                @Html.AntiForgeryToken()

                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group" style="margin-top:20px;">
                    <label class="col-md-4 control-label">First Name</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group" style="margin-top:20px;">
                    <label class="col-md-4 control-label">Last Name</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group" style="margin-top:20px;">
                    <label class="col-md-4 control-label">Phone Number</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group" style="margin-top:20px;">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group" style="margin-top:20px;">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group" style="margin-top:20px;">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group" style="margin-top:20px;">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn custom-btn d-lg-block d-none" value="Register" />
                    </div>
                </div>
            }
        </div>

    </div>
  </section>
  

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
