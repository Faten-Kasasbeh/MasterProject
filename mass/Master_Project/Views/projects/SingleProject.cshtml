@model IEnumerable<Master_Project.Models.project>
<section class="section-hero overlay inner-page bg-image" style="background-image: url('../../template/images/bg.png');" id="home-section">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1 class="text-white font-weight-bold"> Single Project</h1>
                <div class="custom-breadcrumbs">
                    <a href="@Url.Action("Index", "Home")">Home</a> <span class="mx-2 slash">/</span>
                    <a href="@Url.Action("AllProjects","projects")">Projects</a> <span class="mx-2 slash">/</span>
                    <span class="text-white"><strong> Single Project</strong></span>
                </div>
            </div>
        </div>
    </div>
</section>



@foreach (var item in Model)
{


    <section class="site-section" id="next-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 blog-content">
                    <h3 class="mb-4">@item.ProjectName Projec </h3>
                    @if (item.ProjectType == true)
                    {


                        <p class="lead">Singular Project</p>
                    }
                    else
                    {
                        <p class="lead">Group Project</p>

                    }
                    @{
                        string videoUrl = item.ProjectLink;
                        string videoId = videoUrl.Substring(videoUrl.IndexOf("v=") + 2);
                        string thumbnailUrl = "http://img.youtube.com/vi/" + videoId + "/0.jpg";
                    }

                    <p>
                        <a href="@videoUrl" target="_blank" class="block__96788" data-fancybox data-ratio="2">
                            <span class="play-icon"><span class="icon-play"></span></span>

                            @*<img src="@thumbnailUrl" alt="Video thumbnail" class="img-fluid img-shadow" style="width:100%">*@

                            <img src="@thumbnailUrl" alt="Video thumbnail" class="img-fluid rounded" style="width:100%">
                        </a>
                    </p>
                    <p>@item.AboutProject</p>

                    <h4 class="mt-5 mb-4">Technologies and languages used</h4>
                    <p> @item.techniques</p>


            

                </div>
                <div class="col-lg-4 sidebar pl-lg-5">
                    <div class="sidebar-box">
                        <form action="#" class="search-form">
                            <div class="form-group">
                               
                            </div>
                        </form>
                    </div>
                    <div class="sidebar-box">
                        <img src="~/@item.Informaion.Img" alt="Image placeholder" class="img-fluid mb-4 w-50 rounded-circle">
                        <h3>@item.Informaion.FirstName @item.Informaion.LastName</h3>
                        <p>@item.Informaion.Job.JobName</p>
                        <p>@item.Informaion.About</p>
                        <p><a href="@Url.Action("Profile1", "Informaions", new {id=item.Informaion.IdUser})" class="btn btn-primary btn-sm">Show Profile</a></p>
                    </div>

                    <div class="sidebar-box">
                        <div class="categories">
                            <h3>Contact Info</h3>
                            <li><a href="#">@item.Informaion.Phone <span class="icon-phone"></span></a></li>
                            <li><a href="#">@item.Informaion.AspNetUser.Email <span class="icon-mail_outline"></span></a></li>
                            <li><a href="#">@item.Informaion.Github <span class="icon-github"></span></a></li>
                            <li><a href="#">@item.Informaion.City.CityName <span class="icon-location_city"></span></a></li>
                        </div>
                    </div>


                 
                </div>
            </div>
        </div>
    </section>
}