<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">
                Are you sure you want to delete this?
            </h3>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

               

                    <input type="submit" value="Delete" class="btn btn-success" />
                    <a href="@Url.Action("ProjectsAdmin","projects")" class="btn btn-danger">No </a>
             
            }
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#"> Projects</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Delete Project</li>
                </ol>
            </nav>
        </div>
        <div>


            <div class="col-12 grid-margin" id="introduction">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-8 blog-content">
                                <h3 class="mb-4">@Model.ProjectName Projec </h3>
                                @if (Model.ProjectType == true)
                                {


                                    <p class="lead">Singular Project</p>
                                }
                                else
                                {
                                    <p class="lead">Group Project</p>

                                }

                                @{
                                    string videoUrl = Model.ProjectLink;
                                    string videoId = videoUrl.Substring(videoUrl.IndexOf("v=") + 2);
                                    string thumbnailUrl = "http://img.youtube.com/vi/" + videoId + "/0.jpg";
                                }

                                <p>
                                    <a href="@videoUrl" target="_blank" class="block__96788" data-fancybox data-ratio="2">
                                        <span class="play-icon"><span class="icon-play"></span></span>

                                        @*<img src="@thumbnailUrl" alt="Video thumbnail" class="img-fluid img-shadow" style="width:100%">*@

                                        <img src="@thumbnailUrl" alt="Video thumbnail" class="img-fluid rounded" style="width:100%">
                                    </a>
                                </p>
                                <p>@Model.AboutProject</p>

                                <h4 class="mt-5 mb-4">Technologies and languages used</h4>
                                <p> @Model.techniques</p>




                            </div>
                            <div class="col-lg-4 sidebar pl-lg-5">
                                <div class="sidebar-box">
                                    <form action="#" class="search-form">
                                        <div class="form-group">
                                        
                                        </div>
                                    </form>
                                </div>
                                <div class="sidebar-box">
                                    <img src="~/@Model.Informaion.Img" alt="Image placeholder" class="img-fluid mb-4 w-50 rounded-circle">
                                    <h3>@Model.Informaion.FirstName @Model.Informaion.LastName</h3>
                                    <p>@Model.Informaion.Job.JobName</p>
                                    <p>@Model.Informaion.About</p>
                                </div>

                                <div class="sidebar-box">
                                    <div class="categories">
                                        <h3>Contact Info</h3>
                                        <li><a href="#">@Model.Informaion.Phone <span class="icon-phone"></span></a></li>
                                        <li><a href="#">@Model.Informaion.AspNetUser.Email <span class="icon-mail_outline"></span></a></li>
                                        <li><a href="#">@Model.Informaion.Github <span class="icon-github"></span></a></li>
                                        <li><a href="#">@Model.Informaion.City.CityName <span class="icon-location_city"></span></a></li>
                                    </div>
                                </div>



                            </div>
                        </div>
                     
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>