@model IEnumerable<Master_Project.Models.Informaion>

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title"> Requests  </h3>
         
        </div>
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">New Users</h4>
                        <p class="card-description">
                           Request  <code></code>
                        </p>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th> User </th>
                                        <th>  Name </th>
                                        <th> Job Title </th>
                                        <th>City </th>
                                        <th> CV </th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="py-1">
                                                <img src="~/@item.Img" alt="image" />
                                            </td>
                                            <td> @item.FirstName @item.LastName</td>
                                            <td>
                                               @item.Job.JobName
                                            </td>
                                            <td>@item.City.CityName </td>
                                            <td>
                                                <a href="~/Content/@item.CV" download>CV</a>
                                            </td>
                                            <td>
                                                <a  href="@Url.Action("Rejected", "Informaions", new{id=item.IdUser})" class="badge badge-danger">Reject</a>
                                                <a href="@Url.Action("Accepted", "Informaions", new{id=item.IdUser})" class="badge badge-success">Accept</a>
                                            </td>
                                        </tr>
                                    }
                                 
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- content-wrapper ends -->
    <!-- partial:../../partials/_footer.html -->
   
    <!-- partial -->
</div>
