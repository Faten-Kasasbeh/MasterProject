@model IEnumerable<Master_Project.Models.Informaion>

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">

<div class="row">
    <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-9">
                        <div class="d-flex align-items-center align-self-start">
                            <h3 class="mb-0">@ViewBag.NumOfUser </h3>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="icon icon-box-warning ">
                            <span class="mdi mdi-account-group-outline icon-person"></span>
                        </div>
                    </div>
                </div>
                <h6 class="text-muted font-weight-normal">Number Of Users</h6>
            </div>
        </div>
    </div>
    @{Master_Project.Models.Master_projectEntities dd = new Master_Project.Models.Master_projectEntities();
        Master_Project.Models.project project = new Master_Project.Models.project();
        var proj = dd.projects.Count();
        <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-9">
                            <div class="d-flex align-items-center align-self-start">
                                <h3 class="mb-0">@proj</h3>
                                @*<p class="text-success ml-2 mb-0 font-weight-medium">+11%</p>*@
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="icon icon-box-warning">
                                <span class="mdi mdi-laptop  icon-laptop"></span>
                            </div>
                        </div>
                    </div>
                    <h6 class="text-muted font-weight-normal">Number Of Projects</h6>
                </div>
            </div>
        </div>}
        <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-9">
                            <div class="d-flex align-items-center align-self-start">
                                <h3 class="mb-0">@ViewBag.numOfPayed</h3>
                                @*<p class="text-danger ml-2 mb-0 font-weight-medium">-2.4%</p>*@
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="icon icon-box-warning">
                                <span class="mdi mdi-cash-multiple icon-money"></span>
                            </div>
                        </div>
                    </div>
                    <h6 class="text-muted font-weight-normal">Number Of Payment operations</h6>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-9">
                            <div class="d-flex align-items-center align-self-start">
                                <h3 class="mb-0">@ViewBag.NumOfAccept</h3>
                                @*<p class="text-success ml-2 mb-0 font-weight-medium"></p>*@
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="icon icon-box-warning ">
                                <span class="mdi mdi-check-bold icon-item"></span>
                            </div>
                        </div>
                    </div>
                    <h6 class="text-muted font-weight-normal">Number Of Accepted Users</h6>
                </div>
            </div>
        </div>
    </div>
        <div class="row">
       
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-row justify-content-between">
                            <h4 class="card-title mb-1">The job title of the users</h4>
                            <p class="text-muted mb-1">Number Of Users </p>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="preview-list">
                                    <div class="preview-item border-bottom">
                                        <div class="preview-thumbnail">
                                            <div class="preview-icon bg-primary">
                                                <i class="mdi mdi-xml"></i>
                                            </div>
                                        </div>
                                        <div class="preview-item-content d-sm-flex flex-grow">
                                            <div class="flex-grow">
                                                <h6 class="preview-subject">Full Stack Web Developers</h6>
                                                <p class="text-muted mb-0">@Model.Where(i=>i.JobTitle==1).Count()</p>
                                            </div>
                                            <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                                @*<p class="text-muted">@Model.Where(i=>i.JobTitle==1).Count()</p>*@
                                                @*<p class="text-muted mb-0">30 tasks, 5 issues </p>*@
                                            </div>
                                        </div>
                                    </div>
                                    <div class="preview-item border-bottom">
                                        <div class="preview-thumbnail">
                                            <div class="preview-icon bg-success">
                                                <i class="mdi mdi-keyboard"></i>
                                            </div>
                                        </div>
                                        <div class="preview-item-content d-sm-flex flex-grow">
                                            <div class="flex-grow">
                                                <h6 class="preview-subject">BackEnd Web Developers</h6>
                                                <p class="text-muted mb-0">@Model.Where(i => i.JobTitle == 3).Count()</p>
                                            </div>
                                            <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                                @*<p class="text-muted">1 hour ago</p>
                                                <p class="text-muted mb-0">23 tasks, 5 issues </p>*@
                                            </div>
                                        </div>
                                    </div>
                                    <div class="preview-item border-bottom">
                                        <div class="preview-thumbnail">
                                            <div class="preview-icon bg-info">
                                                <i class="mdi mdi-monitor-screenshot"></i>
                                            </div>
                                        </div>
                                        <div class="preview-item-content d-sm-flex flex-grow">
                                            <div class="flex-grow">
                                                <h6 class="preview-subject">FrontEnd Web Developers</h6>
                                                <p class="text-muted mb-0">@Model.Where(i => i.JobTitle == 2).Count()</p>
                                            </div>
                                            <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                                @*<p class="text-muted">35 minutes ago</p>
                                                <p class="text-muted mb-0">15 tasks, 2 issues</p>*@
                                            </div>
                                        </div>
                                    </div>
                               
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row ">
            <div class="col-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Users Status</h4>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                       
                                        <th>  Name </th>
                                        <th> Job Title</th>
                                        <th> City </th>
                                        <th> Phone </th>
                                        <th> Nationality</th>
                                        <th>Accepted Status </th>
                                        <th> Payment Status </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td>
                                                <img src="~/@item.Img" alt="image" />
                                                <span class="pl-2">@item.FirstName @item.LastName</span>
                                            </td>
                                            <td> @item.Job.JobName </td>
                                            <td> @item.City.CityName </td>
                                            <td>@item.Phone</td>
                                            <td>@item.Ntionality </td>
                                            @if (item.Accepted == true)
                                            {

                                                <td><div class="badge badge-outline-success">Approved</div> </td>
                                            }


                                            @if (item.Accepted == false)
                                            {


                                                <td><div class="badge badge-outline-danger">Regected</div> </td>
                                            }
                                            @if (item.Accepted == null)
                                            {
                                                <td><div class="badge badge-outline-warning">Pending</div> </td>

                                            }


                                            @if (item.IsPayed == true)
                                            {

                                                <td><div class="badge badge-outline-success">Payed</div> </td>
                                            }


                                            @if (item.IsPayed == false)
                                            {


                                                <td><div class="badge badge-outline-danger">Unpaid</div> </td>
                                            }
                                            @if (item.IsPayed == null)
                                            {
                                                <td><div class="badge badge-outline-warning">Free Trial</div> </td>

                                            }
                                        </tr>

                                    }
                                  
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
    </div>
    <!-- content-wrapper ends -->
