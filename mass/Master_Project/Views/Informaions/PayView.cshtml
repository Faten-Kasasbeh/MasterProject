    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1 class="text-white font-weight-bold">Pay Now</h1>
                <div class="custom-breadcrumbs">
                    <a href="@Url.Action("Index","Home")">Home</a> <span class="mx-2 slash">/</span>
                    <span class="text-white"><strong>Payment Form</strong></span>
                </div>
            </div>
        </div>
    </div>
</section>

